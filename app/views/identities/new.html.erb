<h1><%= t :create_account %></h1>

<%= form_tag "/auth/identity/register" do %>
  <% if @identity && @identity.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@identity.errors.count, "error") %> forhindrede denne konto i at blive oprettet:</h2>
      <ul>
      <% @identity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag :name, nil, class: "control-label" %><br>
    <%= text_field_tag :name, @identity.try(:name), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email, nil, class: "control-label" %><br>
    <%= text_field_tag :email, @identity.try(:email), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "control-label" %><br>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation, nil, class: "control-label" %><br>
    <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
  </div>
	<button type="submit" class="btn btn-default btn-success">Opret</button>
<% end %>