	<h3><%=t :login_guest_code %></h3>
	
	<p class="lead"><%=t :login_first_time_code %></p>
	
			<% if @message %>
			<div class="alert alert-danger" role="alert"><%= @message %></div>
			<% end %>
			<form role="form">
				 <div class="form-group <%= 'has-error' if @message %>">
				    <label class="control-label" for="code"><%=t :login_guest_code%></label>
				    <input type="password" class="form-control" id="code" name="code" placeholder="">
    				<p class="help-block"><%=t :login_guest_code_enter %></p>
				 </div>		

				  <button type="submit" class="btn btn-default btn-success"><%=t :continue %></button>
			</form>
