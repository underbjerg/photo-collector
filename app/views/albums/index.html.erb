

<div class="row">
  <div class="col-md-9">
  </div>
  <div class="col-md-3">
	  
	<div class="btn-toolbar">
		<div class="btn-group">
			<%= link_to new_album_path, :class => "btn btn-default"  do %>
				<span class="glyphicon glyphicon-plus"></span> Nyt album
			<% end %>
		</div>
	</div>
  	
	
	
	
  </div>
</div>

<br/>

<div>
    <% @albums.each do |album| %>
		<div class="media ">
				<% unless album.photos.empty? -%>
					<%= link_to( image_tag( album.photos.first.image_file.thumb_square.url ), album, :class => "pull-left") %>
				<% else -%>
					<%= link_to( image_tag("placeholder_small.jpg"), album, :class => "pull-left") %>
				<% end -%>
				<div class="media-body">
					<h4 class="media-heading"><%= link_to album.title, album %></h4>
					<%= album.description %>
				</div>
		</div>
		
		
    <% end %>
</div>
